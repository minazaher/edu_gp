<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_misc"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/misc_bg"
    android:layout_height="wrap_content"
    app:behavior_peekHeight= "@dimen/_40sdp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/tv_miscellaneous"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/notokufiarabic_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/white"
        android:text="اخرى"/>

    <LinearLayout
        android:id="@+id/layout_addImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_image"
            app:tint="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/notokufiarabic_medium"
            android:includeFontPadding="false"
            android:text="اضف صورة"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_clearFields"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/baseline_delete_outline_24"
        app:tint="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/notokufiarabic_medium"
        android:includeFontPadding="false"
        android:text="مسح جميع الحقول"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"/>
</LinearLayout>


</LinearLayout>